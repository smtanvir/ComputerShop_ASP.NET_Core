@model Evidence.Models.ViewModels.ProductViewModels

<form asp-action="Edit" enctype="multipart/form-data" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group row">
        <label asp-for="ProductName" class="control-label col-md-4"></label>
        <input asp-for="ProductName" class="form-control col-md-8" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="ModelName" class="control-label col-md-4"></label>
        <input asp-for="ModelName" class="form-control col-md-8" />
        <span asp-validation-for="ModelName" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="MfgDate" class="control-label col-md-4"></label>
        <input asp-for="MfgDate" type="date" class="form-control col-md-8" />
        <span asp-validation-for="MfgDate" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Price" class="control-label col-md-4"></label>
        <input asp-for="Price" class="form-control col-md-8" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="CategoryId" class="control-label col-md-4"></label>
        <select asp-for="CategoryId" class="form-control col-md-8" asp-items="ViewBag.CategoryId"></select>
    </div>
    <div class="form-group row">
        <label asp-for="Image" class="control-label col-md-4"></label>
        <input asp-for="Image" class="form-control col-md-8" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    @*<div class="form-group">
            <label asp-for="WarrantyStatus" class="control-label"></label>
            <input asp-for="WarrantyStatus" class="form-control" />
            <span asp-validation-for="WarrantyStatus" class="text-danger"></span>
        </div>*@
    <div class="form-group offset-4">
        <input type="submit" value="Update" class="btn btn-success btn-lg fas fa-save" />
    </div>
</form>