@model Evidence.Models.ViewModels.ProductViewModels

@{
    ViewData["Title"] = "Create";
}

<h2 class="mt-3" style="color:#020240">Add New Products</h2>
<div id="msg">
</div>
<div class="row mt-4">
    <div class="col-md-8">
        @*<form asp-action="Create" asp-controller="Products" enctype="multipart/form-data" method="post">*@
        <form asp-action="Create" asp-controller="Products" id="form0" data-ajax="true" data-ajax-method="Post" data-ajax-mode="replace" data-ajax-update="#msg" enctype="multipart/form-data" data-ajax-success="success">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="ProductName" class="control-label col-md-4"></label>
                <input asp-for="ProductName" class="form-control col-md-8" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="ModelName" class="control-label col-md-4"></label>
                <input asp-for="ModelName" class="form-control col-md-8" />
                <span asp-validation-for="ModelName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="MfgDate" class="control-label col-md-4"></label>
                <input asp-for="MfgDate" type="date" class="form-control col-md-8" />
                <span asp-validation-for="MfgDate" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Price" class="control-label col-md-4"></label>
                <input asp-for="Price" class="form-control col-md-8" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="CategoryId" class="control-label col-md-4"></label>
                <select asp-for="CategoryId" class="form-control col-md-8" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group row">
                <label asp-for="Image" class="control-label col-md-4"></label>
                <input asp-for="Image" class="form-control col-md-8" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="WarrantyStatus" class="control-label"></label>
                <input asp-for="WarrantyStatus" class="form-control" />
                <span asp-validation-for="WarrantyStatus" class="text-danger"></span>
            </div>*@
            <div class="form-group offset-4">
                <input type="submit" value="SAVE" class="btn btn-success btn-lg fas fa-save" />
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <img src="~/SlidePhoto/27858210_380558539076511_6064698665554322271_n.jpg" width="400" height="300" />
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-info fas fa-arrow-circle-left"> Back to List</a>
</div>

@section Scripts {
<environment include="Development,Production">
    <script type="text/javascript">
        //After form submit clear all field data
        function success() {
            $('#form0').trigger('reset');
        }
    </script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/ajax/dist/jquery.unobtrusive-ajax.js"></script>

</environment>
}
